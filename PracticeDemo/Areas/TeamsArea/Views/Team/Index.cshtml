@model IEnumerable<PracticeDemo.Areas.TeamsArea.Models.TeamDetailsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Team Details</h1>

<p>
    <a asp-action="Create" class="btn btn-info btn-lg m-3"><i class="bi bi-person-plus-fill"></i></a>
</p>
<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCompanyId)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamId)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.TeamName)*@
                    <a asp-action="EmployeeById" asp-controller="Employees" asp-area="EmployeeArea" asp-route-id="@item.TeamId">@item.TeamName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Batch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamCompanyId)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.TeamId} ,new{@class="btn btn-primary bi bi-pencil-square "}) |
                    @Html.ActionLink("Details", "Details", new {  id=item.TeamId } ,new{@class="btn btn-success bi bi-ticket-detailed "}) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.TeamId  },new{@class="btn btn-danger bi bi-trash3-fill "})
            </td>
        </tr>
}
    </tbody>
</table>
