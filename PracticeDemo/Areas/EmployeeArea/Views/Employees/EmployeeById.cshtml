@model IEnumerable<PracticeDemo.Areas.EmployeeArea.Models.EmployeeModel>

@{
    ViewData["Title"] = "EmployeeById";
}

<h1>EmployeeById</h1>

<p>
    <a asp-action="Create" class="btn btn-info btn-lg m-3"><i class="bi bi-person-plus-fill"></i></a>
</p>
<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmlpoyeeTeamId)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Name)*@
                    <a asp-area="EmployeeArea" asp-action="Details" asp-controller="Employees" asp-route-id="@item.Id"> @item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmlpoyeeTeamId)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id  },new{@class="btn btn-primary bi bi-pencil-square "}) |
                @*@Html.ActionLink("Details", "Details", new {  id=item.Id}) |*@
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id  },new{@class=" btn btn-danger bi bi-trash3-fill"})
            </td>
        </tr>
}
    </tbody>
</table>
